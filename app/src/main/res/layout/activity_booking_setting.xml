<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backNotification"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/back"
                android:tint="@color/white" />


            <controls.CTextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <controls.CTextView
                android:id="@+id/tvHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Average meal time hour"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <controls.CEditText
                android:id="@+id/etHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:gravity="start"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_grey"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/grey" />

            <controls.CTextView
                android:id="@+id/tvMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Average meal time minute"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <controls.CEditText
                android:id="@+id/etMinute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:gravity="start"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_grey"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/grey" />

            <controls.CTextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Total Seating Capacity"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <controls.CEditText
                android:id="@+id/etCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:gravity="start"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_grey"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/grey" />

            <controls.CTextView
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg_blue"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="center"
                android:text="Save"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>


    </LinearLayout>
</layout>