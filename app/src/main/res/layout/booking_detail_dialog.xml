<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@drawable/corner_bg_white_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <controls.CTextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        tools:text="name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <controls.CTextView
                            android:id="@+id/tvContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="0123456789"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/call"
                            android:tint="@color/colorPrimary"/>

                    </LinearLayout>

                    <controls.CTextView
                        android:id="@+id/tvMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        tools:text="abc@mail.com"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <controls.CTextView
                    android:id="@+id/tvNoOfPerson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <controls.CTextView
                    android:id="@+id/btnPerson"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_bg_blue"
                    android:gravity="center"
                    tools:text="100"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <controls.CTextView
                    android:id="@+id/tvNoOfSeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <controls.CTextView
                    android:id="@+id/btnSeat"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_bg_blue"
                    android:gravity="center"
                    tools:text="100"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <controls.CTextView
                    android:id="@+id/tvAvgTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <controls.CTextView
                    android:id="@+id/btnAvgTime"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_bg_blue"
                    android:gravity="center"
                    tools:text="100"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <controls.CTextView
                android:id="@+id/tvSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Special Request"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/tvSpecialRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 Seat"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnReplay"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg_blue"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <controls.CEditText
                android:id="@+id/etReplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/border_grey"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/grey" />

            <controls.CTextView
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/corner_bg_blue"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/tvCancelNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:visibility="gone"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnArrived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg_blue_corner"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg_blue_corner"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/corner_bg_blue_corner"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/corner_bg_blue_corner"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <controls.CTextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/corner_bg_blue"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </LinearLayout>

</layout>